script(type="text/ng-template", id="/partials/login")
  .container
    .row
      .span6
        div Please log in:
        form.login-form(ng-submit="login()")
          .row
            .span2
              label Username
            .span4
              input(type="text", ng-model="loginUsername")
          .row
            .span2
              label Password
            .span4
              input(type="password", ng-model="loginPassword")
          .row
            .offset2.span4
              input.btn-success(type="submit", value="Log in")
