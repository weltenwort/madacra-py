doctype 5
html(ng-app="madacra")
  head
    title Madacra
    block stylesheets
      - assets "css_app"
        link(rel="stylesheet", type="text/css", href=ASSET_URL)
      - endassets
    block scripts
      - assets "js_lib"
        script(type="text/javascript", src=ASSET_URL)
      - endassets
      - assets "js_app"
        script(type="text/javascript", src=ASSET_URL)
      - endassets
  body(ng-controller="MainController")
    include partials/login.jade
    include partials/campaign_list.jade
    div(ng-view)
